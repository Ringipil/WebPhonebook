@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-exclamation-octagon-fill"></i> Error
                    </h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger mb-4">
                        An error occurred while processing your request
                    </h4>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    <div class="alert alert-warning mt-4">
                        <h5 class="alert-heading">Development Mode</h5>
                        <p class="mb-2">
                            Swapping to <strong>Development</strong> environment will display more detailed error information.
                        </p>
                        <hr>
                        <p class="mb-0">
                            <strong>Note:</strong> Don't enable Development mode in production as it may expose sensitive information.
                            For local debugging, set <code>ASPNETCORE_ENVIRONMENT=Development</code> and restart the app.
                        </p>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="People" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Back to Phonebook
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
