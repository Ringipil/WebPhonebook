@model WebPhonebook.Models.UploadViewModel
@{
    ViewData["Title"] = "Upload Files";
}

<h2>Upload Name Files</h2>

@if (ViewBag.Message != null)
{
    <p style="color: green;">@ViewBag.Message</p>
}
@if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}

<div style="border: 1px solid #ccc; padding: 15px; width: 350px;">
    <form asp-action="Upload" asp-controller="Upload" method="post" enctype="multipart/form-data">
        <div style="margin-bottom: 10px;">
            <label>First Names File:</label>
            <input asp-for="FirstNamesFile" type="file" required />
        </div>
        <hr style="border-top: 1px solid #aaa; margin: 15px 0;" />
        <div style="margin-bottom: 10px;">
            <label>Middle Names File:</label>
            <input asp-for="MiddleNamesFile" type="file" required />
        </div>
        <hr style="border-top: 1px solid #aaa; margin: 15px 0;" />
        <div style="margin-bottom: 10px;">
            <label>Last Names File:</label>
            <input asp-for="LastNamesFile" type="file" required />
        </div>
        <hr style="border-top: 1px solid #aaa; margin: 15px 0;" />
        <button type="submit" style="display: block; margin: 10px auto;">Upload</button>
    </form>
</div>
