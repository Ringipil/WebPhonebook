@model WebPhonebook.Models.UploadViewModel
@{
    ViewData["Title"] = "Upload Files";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-cloud-upload"></i> Upload Name Files
                    </h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @ViewBag.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Upload" asp-controller="Upload" method="post" enctype="multipart/form-data" class="mt-3">
                        <div class="mb-4">
                            <label class="form-label fw-bold">First Names File:</label>
                            <div class="input-group">
                                <input asp-for="FirstNamesFile" type="file" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Middle Names File:</label>
                            <div class="input-group">
                                <input asp-for="MiddleNamesFile" type="file" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Last Names File:</label>
                            <div class="input-group">
                                <input asp-for="LastNamesFile" type="file" class="form-control" required>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="People" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Back to Contacts
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-upload"></i> Upload Files
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
