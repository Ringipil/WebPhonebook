@model Person
@{
    ViewData["Title"] = "Edit Person";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Person</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="post" asp-action="Update" asp-route-selectedHandler="@Context.Request.Query["selectedHandler"]" class="bg-light p-4 rounded">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Name:</label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Phone Number:</label>
            <input class="form-control" asp-for="PhoneNumber" />
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
