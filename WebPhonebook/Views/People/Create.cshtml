@model IndexViewModel

<form method="post" asp-route-selectedHandler="@Model.SelectedHandler">
    <div class="mb-3">
        <label>Name:</label>
        <input type="text" class="form-control" asp-for="NewPerson.Name" required />
    </div>
    <div class="mb-3">
        <label>Phone Number:</label>
        <input type="text" class="form-control" asp-for="NewPerson.PhoneNumber" required />
    </div>
    <div class="mb-3">
        <label>Email:</label>
        <input type="email" class="form-control" asp-for="NewPerson.Email" required />
    </div>
    <button type="submit" class="btn btn-success">Add Person</button>
</form>
