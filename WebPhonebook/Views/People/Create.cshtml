@model IndexViewModel

<div class="border p-4 rounded bg-light">
    <h4 class="mb-4">Add New Contact</h4>

    <form method="post" asp-route-selectedHandler="@Model.SelectedHandler">
        <div class="mb-3">
            <label class="form-label">Name:</label>
            <input type="text" class="form-control" asp-for="NewPerson.Name" required placeholder="Enter full name">
        </div>

        <div class="mb-3">
            <label class="form-label">Phone:</label>
            <input type="tel" class="form-control" asp-for="NewPerson.PhoneNumber" required placeholder="Enter phone number">
        </div>

        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input type="email" class="form-control" asp-for="NewPerson.Email" required placeholder="Enter email address">
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-person-plus"></i> Add Contact
            </button>
        </div>
    </form>
</div>
