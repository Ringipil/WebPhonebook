@{
    var currentHandler = ViewData["CurrentHandler"] as string ?? "ef";
}

<form asp-action="SwitchDatabaseHandler" method="post">
    <label>
        <input type="radio" name="selectedHandler" value="sql"
        @(currentHandler == "sql" ? "checked" : "") />
        Use SQL Database Handler
    </label>
    <label>
        <input type="radio" name="selectedHandler" value="ef"
        @(currentHandler == "ef" ? "checked" : "") />
        Use EF Core Database Handler
    </label>
    <button type="submit">Switch</button>
</form>
