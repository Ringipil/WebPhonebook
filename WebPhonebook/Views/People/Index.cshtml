@model IndexViewModel

@{
    ViewData["Title"] = "People Manager";
}

<div class="container mt-4">
    <h2 class="mb-4">Phonebook</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Search Contacts</h5>
        </div>
        <div class="card-body">
            <partial name="SearchForm" />
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Add New Contact</h5>
        </div>
        <div class="card-body">
            <partial name="AddPersonForm" />
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Contacts List</h5>
        </div>
        <div class="card-body">
            <div id="peopleListContainer">
                <partial name="PeopleList" />
            </div>
        </div>
    </div>
</div>
